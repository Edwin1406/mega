# --- Permitir solo Ecuador (Cloudflare) ---
<IfModule mod_rewrite.c>
RewriteEngine On

# Si NO es Ecuador -> 403 Forbidden
RewriteCond %{HTTP:CF-IPCountry} !^EC$ [NC]
RewriteRule ^ - [F]

# (opcional) Si necesitas entrar desde fuera de EC, lista blanca por IP:
# RewriteCond %{HTTP:CF-Connecting-IP} ^(1\.2\.3\.4|5\.6\.7\.8)$
# RewriteRule ^ - [S=1]
</IfModule>
# --- Fin bloqueo por pa√≠s ---

# --- Tus reglas actuales (front controller) ---
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]
