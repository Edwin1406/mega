# --- Permitir SOLO Ecuador si Cloudflare envía el país ---
<IfModule mod_rewrite.c>
RewriteEngine On

# Si Cloudflare SÍ manda el header de país
#   y NO es Ecuador => 403
RewriteCond %{HTTP:CF-IPCountry} .
RewriteCond %{HTTP:CF-IPCountry} !^EC$ [NC]
RewriteRule ^ - [F]

# (opcional) Lista blanca por IP real (si necesitas entrar desde fuera)
# RewriteCond %{HTTP:CF-Connecting-IP} ^(1\.2\.3\.4|5\.6\.7\.8)$
# RewriteRule ^ - [L]
</IfModule>
# --- Fin bloqueo por país ---

# --- Tus reglas actuales ---
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]
